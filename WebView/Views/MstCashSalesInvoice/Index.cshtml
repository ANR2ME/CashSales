@{
    ViewBag.Title = "Master CashSalesInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Content/apps_js/tools.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/apps_js/mastercashsalesinvoice.js")"></script>
}
<div id="ua_panel" class="easyui-panel" style="text-align: left;" data-options="modal:true" 
    title=".: Master CashSalesInvoice :.">
<div id="toolbar" class="form_toolbar">
        <a id="btn_reload" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-reload'">Reload Data</a>
        <a id="btn_add_new" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">Add New</a>
        <a id="btn_edit" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-edit'">Edit Data</a>
        <a id="btn_del" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Delete</a>
        <a id="btn_print" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-print'">Print Data</a>
    </div>

    <div id="table_div">
        <table id="list"></table>
        <div id="pager" class="scroll" style="text-align: center;"></div>
    </div>

<!-- Dialog Box -->
    <div id="form_div" class="easyui-dialog" style="text-align: left; padding:0px 0px 10px" data-options="modal:true"  
        title=".: Master Item :.">

        <div id="form_toolbar" class="form_toolbar">
            <a id="form_btn_save" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'">Save</a>
            <a id="form_btn_cancel" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close</a>
        </div>

        <div style="overflow: auto">
            <form id="frm">
                @*<fieldset class="ui-widget-content ui-corner-all input_form_div">*@
                    <table width="100%" border="0" cellpadding="1" cellspacing="1" class="input_form_tbl">
                        <tr nowrap>
                            <td width="139" nowrap style="width: 100px">
                                <label>ID</label></td>
                            <td width="550">
                                <input id="id" type="text" size="10" disabled="disabled"/></td>
                        </tr>
                         <tr>
                            <td>
                                <label>Description</label></td>
                            <td >
                                <input id="Description" name ="Description" type="text" size="60" maxlength="60" align="left"/></td>
                        </tr>
                        <tr>
                            <td>
                                <label>CashBank</label></td>
                            <td colspan="3">
                               <input id="CashBankId"  class="textright" type="text" size="10" maxlength="7" disabled="disabled" />
                               <input id="btnCashBank" name="buttonactivated" type="button" style="cursor: pointer;" class="ui-corner-all ui-state-default" value=".." />
                               <input id="CashBankName" name="CashBank" type="text" size="56" maxlength="50" class="editable upper" disabled="disabled" />
                                         
                        </tr>
                        <tr>
                            <td>
                                <label>Warehouse</label></td>
                            <td colspan="3">
                               <input id="WarehouseId"  class="textright" type="text" size="10" maxlength="7" disabled="disabled" />
                               <input id="btnWarehouse" name="buttonactivated" type="button" style="cursor: pointer;" class="ui-corner-all ui-state-default" value=".." />
                               <input id="WarehouseName" name="Warehouse" type="text" size="56" maxlength="50" class="editable upper" disabled="disabled" />
                                         
                        </tr>
                        <tr>
                            <td>
                                <label>Discount</label></td>
                            <td colspan="3">
                        <input id="Discount" name="Discount" type="text" size="15" maxlength="20" class="textright easyui-numberbox" data-options="precision:2,groupSeparator:','" value="0" />
                        </tr>
                        <tr>
                            <td>
                                <label>Tax</label></td>
                            <td colspan="3">
                        <input id="Tax" name="Tax" type="text" size="15" maxlength="20" class="textright easyui-numberbox" data-options="precision:2,groupSeparator:','" value="0" />
                        </tr>
                        <tr>
                            <td>
                                <label>Allowance</label></td>
                            <td colspan="3">
                        <input id="Allowance" name="Allowance" type="text" size="15" maxlength="20" class="textright easyui-numberbox" data-options="precision:2,groupSeparator:','" value="0" />
                        </tr>
                        <tr>
                            <td>
                                <label>SalesDate</label></td>
                            <td colspan="3">
                        <input id="SalesDate" name="SalesDate" type="date" class="textright easyui-datepicker" data-options="precision:2,groupSeparator:','" value="0" />
                        </tr>
                        <tr>
                            <td>
                                <label>DueDate</label></td>
                            <td colspan="3">
                        <input id="DueDate" name="DueDate" type="date" class="textright easyui-datepicker" data-options="precision:2,groupSeparator:','" value="0" />
                        </tr>
                    </table>
                @*</fieldset>*@
            </form>
        </div>
    </div>
<!-- End Dialog Box -->

<!-- Dialog Box  Delete-->
    <div id="delete_confirm_div" class="easyui-dialog" style="text-align: left; height: 130px; width: 300px;"
        data-options="modal:true" title=".: Confirmation :.">

        <div id="delete_confirm_toolbar" class="form_toolbar">
            <a id="delete_confirm_btn_submit" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'">Submit</a>
            <a id="delete_confirm_btn_cancel" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close</a>
        </div>
        <div id="delete_confirm_info">
            <span>Are you sure to delete the selected record?</span>
            <input id="delete_confirm_id" type="hidden" />
        </div>
    </div>
<!-- End Dialog Box Delete-->

 <!-- Look Up CashBank -->
    <div id="lookup_div_cashbank" class="easyui-dialog" title="List CashBank" style="padding: 0px 5px; height: 490px; width: 480px;"
        data-options="iconCls:'icon-tip',modal:true">

        <div id="lookup_toolbar_cashbank" class="grid_toolbar">
            <a id="lookup_btn_add_cashbank" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">Select Data</a>
            <a id="lookup_btn_cancel_cashbank" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close Window</a>
        </div>

        <table id="lookup_table_cashbank" class="scroll" cellpadding="0" cellspacing="0"></table>
        <div id="lookup_pager_cashbank" class="scroll" style="text-align: center;"></div>
    </div>
<!-- END Look Up CashBank -->

 <!-- Look Up Warehouse -->
    <div id="lookup_div_warehouse" class="easyui-dialog" title="List Warehouse" style="padding: 0px 5px; height: 490px; width: 480px;"
        data-options="iconCls:'icon-tip',modal:true">

        <div id="lookup_toolbar_warehouse" class="grid_toolbar">
            <a id="lookup_btn_add_warehouse" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">Select Data</a>
            <a id="lookup_btn_cancel_warehouse" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close Window</a>
        </div>

        <table id="lookup_table_warehouse" class="scroll" cellpadding="0" cellspacing="0"></table>
        <div id="lookup_pager_warehouse" class="scroll" style="text-align: center;"></div>
    </div>
<!-- END Look Up Warehouse -->

  </div>

